<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omenacle.agency">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".FirebaseApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RouteActivity"
            android:label="@string/title_activity_route"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VIPRouteActivity"
            android:label="@string/title_activity_route"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ValidationActivity"
            android:label="@string/validation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VIPValidationActivity"
            android:label="@string/validation"
            android:screenOrientation="portrait"/>
        <activity android:name=".RouteSelectionActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".VIPRouteSelectionActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>